{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trabajo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trabajo.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ trabajo.titulo }}</td>
            </tr>
            <tr>
                <th>Tema</th>
                <td>{{ trabajo.tema }}</td>
            </tr>
            <tr>
                <th>Tipopresentacion</th>
                <td>{{ trabajo.tipoPresentacion }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ trabajo.autor }}</td>
            </tr>
            <tr>
                <th>Autoressecundarios</th>
                <td>{{ trabajo.autoresSecundarios }}</td>
            </tr>
            <tr>
                <th>Aprobado</th>
                <td>{% if trabajo.aprobado %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Resumen</th>
                <td>{{ trabajo.resumen }}</td>
            </tr>
            <tr>
                <th>Correogmail</th>
                <td>{{ trabajo.correoGmail }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ trabajo.correo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trabajo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('trabajo_edit', { 'id': trabajo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
